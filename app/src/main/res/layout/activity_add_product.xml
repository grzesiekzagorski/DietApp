<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo16"
    android:orientation="vertical"
    tools:context=".activities.AddProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextNazwa"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nazwa"
            android:inputType="text|textPersonName" />

        <EditText
            android:id="@+id/editTextKalorie"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Kalorie"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editTextBialko"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Białko"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editTextWeglowodany"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Węglowodany"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editTextTluszcz"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Tłuszcz"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/buttonDodajSkladnik"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:text="Dodaj" />

    </LinearLayout>
</LinearLayout>