<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo16"
    android:orientation="vertical"
    tools:context=".activities.InformationAboutBMI">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginTop="80dp"
            android:text="Zakresy wartości BMI" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="mniej niż 16 - wygłodzenie" />

        <TextView
            android:id="@+id/textView30"
            android:padding="5dp"
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="16 - 16.99 - wychudzenie" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="17 - 18.49 - niedowaga" />

        <TextView
            android:id="@+id/textView28"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:text="18.5 - 24.99 - wartość prawidłowa" />

        <TextView
            android:id="@+id/textView27"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:text="25 - 29.99 - nadwaga" />

        <TextView
            android:id="@+id/textView26"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:text="30 - 34.99 - I stopień otyłości" />

        <TextView
            android:id="@+id/textView25"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:text="35 - 39.99 - II stopień otyłości" />

        <TextView
            android:id="@+id/textView24"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:text="powyżej 40 - otyłość skrajna" />
    </LinearLayout>
</LinearLayout>