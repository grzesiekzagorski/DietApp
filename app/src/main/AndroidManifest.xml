<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.grzesiek87.dietapp">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AboutYou"
            android:label="@string/about_you" />
        <activity
            android:name=".activities.ChooseDietActivity"
            android:label="@string/your_diet" />
        <activity
            android:name=".activities.HomeActivity"
            android:label="Twoja dieta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ProductActivity"
            android:label="@string/title_activity_home" />
        <activity android:name=".activities.AboutApplication" />
        <activity
            android:name=".activities.ScannerQrActivity"
            android:label="@string/QR_name" />
        <activity android:name=".activities.QrFoodListActivity"
            android:label="@string/scan_products"/>
        <activity android:name=".activities.AddProductActivity"
            android:label="Dodaj produkt"/>
        <activity android:name=".activities.AddToDishActivity"
            android:label="Twoje produkty"/>
        <activity android:name=".activities.PlanActivity"
            android:parentActivityName=".activities.HomeActivity"
            android:label="@string/healthy_plan"/>
        <activity android:name=".activities.BmiCalculator"
            android:label="@string/calculator_bmi"/>
        <activity android:name=".activities.InformationAboutBMI"
            android:label="@string/Bmi_information"/>

    </application>

</manifest>